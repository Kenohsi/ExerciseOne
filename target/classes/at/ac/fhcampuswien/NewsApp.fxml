<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.NewsAppFx">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="400.0" prefWidth="1200.0" VBox.vgrow="ALWAYS">
            <children>
                <SplitPane layoutX="1.0" prefHeight="400.0" prefWidth="1200.0">
                    <items>
                        <AnchorPane prefHeight="384.0" prefWidth="536.0">
                            <children>
                                <ImageView fx:id="Background" fitHeight="457.0" fitWidth="1210.0">
                                    <image>
                                        <Image url="@download.jpg" />
                                    </image>
                                </ImageView>
                                <Label fx:id="Labelonee" alignment="CENTER" layoutX="195.0" layoutY="86.0" prefHeight="367.0" prefWidth="863.0" text="Your favourite news here!" textFill="RED">
                                    <font>
                                        <Font name="Arial Rounded MT Bold" size="18.0" />
                                    </font>
                                </Label>
                        <Label layoutX="360.0" layoutY="30.0" prefHeight="39.0" prefWidth="561.0" text="Welcome to the hottest news" textFill="RED">
                           <font>
                              <Font name="Arial Rounded MT Bold" size="39.0" />
                           </font>
                        </Label>
                              <AnchorPane layoutX="6.0" minHeight="0.0" minWidth="0.0" prefHeight="457.0" prefWidth="158.0">
                                  <children>
                                      <Button fx:id="Headlines" layoutX="2.0" layoutY="151.0" mnemonicParsing="false" onAction="#AllNews" prefHeight="62.0" prefWidth="154.0" text="Headlines" textFill="RED" textOverrun="CENTER_WORD_ELLIPSIS">
                                          <font>
                                              <Font name="Arial Rounded MT Bold" size="18.0" />
                                          </font>
                                      </Button>
                                      <Button fx:id="BitcoinButton" layoutX="2.0" layoutY="251.0" mnemonicParsing="false" onAction="#BitcoinNews" prefHeight="62.0" prefWidth="154.0" text="Bitcoin News" textFill="RED">
                                          <font>
                                              <Font name="Arial Rounded MT Bold" size="18.0" />
                                          </font>
                                      </Button>
                                      <Button fx:id="ArticleCount1" layoutX="2.0" layoutY="358.0" mnemonicParsing="false" onAction="#ArticleCount" prefHeight="62.0" prefWidth="154.0" text="Article Count" textFill="RED">
                                          <font>
                                              <Font name="Arial Rounded MT Bold" size="18.0" />
                                          </font>
                                 <effect>
                                    <Blend mode="LIGHTEN" />
                                 </effect>
                                      </Button>
                                  </children>
                              </AnchorPane>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
                <ImageView fx:id="ArticlesPics" fitHeight="92.0" fitWidth="124.0" layoutX="1069.0" layoutY="8.0">
                    <image>
                        <Image url="@Articles.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="BitcoinPicture" fitHeight="110.0" fitWidth="124.0" layoutX="1069.0" layoutY="100.0">
                    <image>
                        <Image url="@Bitcoin.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </children>
</VBox>
